<body>
<div id="address">
    <p>{{ contact.name }}</p>
    <p>{{ contact.addr }}</p>
    {% if contact.addr2 %}
        <p>{{ contact.addr2 }}</p>
    {% endif %}
    <p>{{ contact.city }}, {{ contact.state }} {{ contact.zip }}</p>
</div>
<div id="salutation">{{ contact.salutation }} {{ contact.name }},</div>
<div id="text">{{ text }}</div>
<div id="signature">{{ signature }}</div>
<div id="return">
    <p>{{ return.name }}</p>
    <p>{{ return.addr }}</p>
    {% if return.addr2 is defined %}
        <p>{{ return.addr2 }}</p>
    {% endif %}
    <p>{{ return.city }}, {{ return.state }} {{ return.zip }}</p>
</div>
